// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

model User {
  id String  @id @default(cuid()) @map("_id")
  email String @unique
  password String?
  name String
  avatar String
  stage Int
  prestige Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}